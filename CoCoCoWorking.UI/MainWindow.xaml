<Window x:Class="CoCoCoWorking.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoCoCoWorking.UI"
        mc:Ignorable="d"
        Title="CoCoCoWorking" Height="800" Width="1000" ResizeMode="NoResize">
    <Grid>
        <TabControl x:Name="MainTabControl">
            <TabItem Header="Customers">
                <Grid Background="Bisque">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50*"/>
                        <ColumnDefinition Width="50*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50*"/>
                        <RowDefinition Height="50*"/>
                    </Grid.RowDefinitions>
                    <Label Content="Form to create new Customer" HorizontalAlignment="Left" VerticalAlignment= "Top"  Margin="30,20,0,0" FontWeight="Bold" FontFamily="Arial Black" FontSize="14" />
                    <Label Content="First name" HorizontalAlignment="Left" VerticalAlignment= "Top"  Margin="30, 70, 0, 0" FontWeight="Bold" FontFamily="Arial Black" FontSize="14"/>
                    <Label Content="Last name" HorizontalAlignment="Left" VerticalAlignment= "Top"  Margin="30, 130, 0, 0" FontWeight="Bold" FontFamily="Arial Black" FontSize="14" />
                    <Label Content="Number" HorizontalAlignment="Left" VerticalAlignment= "Top"  Margin="30, 190, 0, 0" FontWeight="Bold" FontFamily="Arial Black" FontSize="14"/>
                    <Label Content="Email" HorizontalAlignment="Left" VerticalAlignment= "Top"  Margin="30, 250, 0, 0" FontWeight="Bold" FontFamily="Arial Black" FontSize="14"/>
                    <TextBox Name="TextBoxFirstName" Width="200" Height="30" HorizontalAlignment="Center" VerticalAlignment= "Top" Margin="0,70,0,0"/>
                    <TextBox Name="TextBoxLastName" Width="200" Height="30" HorizontalAlignment="Center" VerticalAlignment= "Top" Margin="0,130,0,0" />
                    <TextBox Name="TextBoxNumber" Width="200" Height="30" HorizontalAlignment="Center" VerticalAlignment= "Top" Margin="0,190,0,0" />
                    <TextBox Name="TextBoxEmail" Width="200" Height="30" HorizontalAlignment="Center" VerticalAlignment= "Top" Margin="0,250,0,0" />
                    <Button Name="ButtomCreateNewCustomer" Content="Create New Customer" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="200" Height="30" Margin="0,0,0,30" FontWeight="Bold" FontFamily="Arial Black" FontSize="14" Click="ButtonCreateNewCustomer_Click"  />
                    <Label Content="Number for search:" Grid.Column="2"  Width="160" HorizontalAlignment="Left" VerticalAlignment= "Top" FontWeight="Bold" FontFamily="Arial Black" FontSize="14" Margin="10, 20, 0, 0" Height="30" />
                    <TextBox Name="TextBoxNumberForSearch" Grid.Column="2" Width="160" Height="30" HorizontalAlignment="Left" VerticalAlignment= "Top" Margin="10, 50, 0, 0"/>
                    <Button Name="ButtonSearchByNumber" Content="Search by Number"  Grid.Column="2" Width="160" Height="30" HorizontalAlignment="Right" VerticalAlignment= "Top" FontWeight="Bold" Margin="0,50,136,0" FontFamily="Arial Black" FontSize="14" Click="ButtonSearchByNumber_Click"/>
                    <Label Content="List of Customers:" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment= "Top" FontWeight="Bold" FontFamily="Arial Black" FontSize="14" Margin="0,100,0,0" Height="30" />
                    <DataGrid Name="DataGridCustomers" Grid.Column="2" Margin="10,130,10,80" Grid.RowSpan="2" ColumnHeaderHeight="30" RowBackground="AliceBlue" RowHeight="30" AutoGenerateColumns="False" CanUserAddRows = "False" CellEditEnding="DataGridCustomers_CellEditEnding" >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="First Name" Width="45*" Binding="{Binding UpdateSourceTrigger=PropertyChanged, Path=FirstName}"/>
                            <DataGridTextColumn Header="Last Name" Width="45*" Binding="{Binding UpdateSourceTrigger=PropertyChanged, Path=LastName}"/>
                            <DataGridTextColumn Header="Phone"  Width="40*" Binding="{Binding UpdateSourceTrigger=PropertyChanged, Path=PhoneNumber}"/>
                            <DataGridTextColumn Header="Email" Width="50*" Binding="{Binding UpdateSourceTrigger=PropertyChanged, Path=Email}"/>
                            <DataGridTextColumn Header="Regular" Width="30*" IsReadOnly="True" Binding="{Binding Path=Regular}" />
                            <DataGridTextColumn Header="Subscribe" Width="30*" IsReadOnly="True" Binding="{Binding Path=Subscribe}"/>
                            <DataGridTextColumn Header="EndDate"  Width="40*" IsReadOnly="True" Binding="{Binding Path=EndDate}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button Name="ButtonCreateNewOrder" Grid.Column="1" Grid.Row="1" Content="Create New Order" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="200" Height="30" Margin="0,0,10,30" FontWeight="Bold" FontFamily="Arial Black" FontSize="14" Click="ButtonCreateNewOrder_Click"/>
                    <Button x:Name="ButtonReset_Customer" Content="reset"  Grid.Column="3" Width="76" Height="30" HorizontalAlignment="Right" VerticalAlignment= "Top" FontWeight="Bold" Margin="0,50,28,0" FontFamily="Arial Black" FontSize="14" Click="ButtonReset_Customer_Click"/>
                    <Button Name="ButtonRefreshBase" Grid.Column="1" Grid.Row="1" Content="Update customers" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="200" Height="30" Margin="10,0,0,30" FontWeight="Bold" FontFamily="Arial Black" FontSize="14" Click="ButtonRefreshBase_Click"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="TabItem_Orders" Header="Orders" Height="20" VerticalAlignment="Bottom">
                <Grid Background="Bisque">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Name="TextBlockChoosenCustomer" Height="30" Width="200" VerticalAlignment="Top" Margin="0, 15, 200, 0">
                        <TextBlock.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="Black"/>
                                <GradientStop Color="White" Offset="0"/>
                            </LinearGradientBrush>
                        </TextBlock.Background>
                    </TextBlock>
                    <Button Name="ButtonResetCustomer" Content="Reset Customer" Height="30" Width="150" VerticalAlignment="Top" Margin="200, 15, 0, 0" FontWeight="Bold" FontFamily="Arial Black" FontSize="14" Click="ButtonResetCustomer_Click"/>
                    <ComboBox x:Name="Combobox_PurchaseType" HorizontalAlignment="Left" Height="33" Margin="463,60,0,0" VerticalAlignment="Top" Width="477" SelectionChanged="Combobox_PurchaseType_SelectionChanged" />
                    <DataGrid x:Name="DataGrid_Order" HorizontalAlignment="Left" Height="446" Margin="45,250,0,0" VerticalAlignment="Top" Width="413" Grid.ColumnSpan="2" AutoGenerateColumns="False" SelectionChanged="DataGrid_Order_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="OrderCost" Binding="{Binding Path=OrderCost}"/>
                            <DataGridTextColumn Header="OrderStatus" Binding="{Binding Path=OrderStatus}"/>
                            <DataGridTextColumn Header="PaidDate" Binding="{Binding Path=PaidDate}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button x:Name="ButtonCreateOrder" Content="Create order" HorizontalAlignment="Left" Height="48" Margin="800,700,0,0" VerticalAlignment="Top" Width="145"  FontWeight="Bold" FontFamily="Arial Black" FontSize="14" Click="ButtonCreateOrder_Click" />
                    <ComboBox x:Name="Combobox_ChooseWorkplace" HorizontalAlignment="Left" Height="35" Margin="463,125,0,0" VerticalAlignment="Top" Width="477" IsEnabled="False" SelectionChanged="Combobox_ChooseWorkplace_SelectionChanged"  />
                    <ComboBox x:Name="ComboBox_Type" HorizontalAlignment="Left" Height="33" Margin="45,60,0,0" VerticalAlignment="Top" Width="173" SelectionChanged="ComboBox_Type_SelectionChanged" >
                        <ComboBoxItem Content="Room"/>
                        <ComboBoxItem Content="Сonference hall"/>
                        <ComboBoxItem Content="Meeting room"/>
                        <ComboBoxItem Content="Worckplace"/>
                        <ComboBoxItem Content="Worckplace fixed"/>
                        <ComboBoxItem Content="Service"/>
                    </ComboBox>
                    <DataGrid x:Name="DataGrid_UnitOrder" HorizontalAlignment="Left" Height="446" Margin="530,250,0,0" VerticalAlignment="Top" Width="415" Grid.ColumnSpan="2" AutoGenerateColumns="False" >
                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Удалить" Click="ContextMenuOrderUnit_ClickDelete"/>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="StartDate" Binding="{Binding StartDate}"/>
                            <DataGridTextColumn Header="StartDate" Binding="{Binding EndDate}"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding Type}"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                            <DataGridTextColumn Header="Number" Binding="{Binding Number}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button x:Name="ButtonAddToOrder" Content="Add to order" HorizontalAlignment="Left" Height="38" Margin="463,200,0,0" VerticalAlignment="Top" Width="114"  FontWeight="Bold" FontFamily="Arial Black" FontSize="14" Click="ButtonAddToOrder_Click" />
                    <Calendar x:Name="Order_Calendar" HorizontalAlignment="Left" Height="178" Margin="218,60,0,0" VerticalAlignment="Top" Width="240" SelectionMode="MultipleRange" />
                    <DatePicker x:Name="DatePicker_Order_StartDate" HorizontalAlignment="Left" Height="27" Margin="45,120,0,0" VerticalAlignment="Top" Width="173"/>
                    <DatePicker x:Name="DatePicker_Order_EndDate" HorizontalAlignment="Left" Height="26" Margin="45,160
                                ,0,0" VerticalAlignment="Top" Width="173"/>
                    <Button x:Name="ButtonSearchByDateForOrder" Content="Search by date" HorizontalAlignment="Left" Height="38" Margin="45,200,0,0" VerticalAlignment="Top" Width="142"  FontWeight="Bold" FontFamily="Arial Black" FontSize="14" Click="ButtonSearchByDateForOrder_Click"/>
                    <Button x:Name="ButtonReset" Content="Reset" HorizontalAlignment="Left" Height="38" Margin="834,200,0,0" VerticalAlignment="Top" Width="110"  FontWeight="Bold" FontFamily="Arial Black" FontSize="14"/>
                    <ComboBox Name="ComboBoxOrderStatus" HorizontalAlignment="Left" Margin="530,716,0,0" VerticalAlignment="Top" Width="167" Height="30"></ComboBox>
                </Grid>
            </TabItem>
            <TabItem x:Name="TabItemAdministration" Header="Administration">
                <Grid Background="Bisque">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <DataGrid x:Name="DataGridRentPrices" HorizontalAlignment="Center" Height="166" VerticalAlignment="Top" Width="446" d:ItemsSource="{d:SampleData ItemCount=5}" AutoGenerateColumns="False" Grid.Row="2" Margin="0,34,0,0">
                        <DataGrid.CellStyle>
                            <Style/>
                        </DataGrid.CellStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Type of Product" Width="50*" Binding="{Binding Path=Type}"/>
                            <DataGridTextColumn Header="Name" Width="50*" Binding="{Binding Path=Name}"/>
                            <DataGridTextColumn Header="Period" Width="50*" Binding="{Binding Path=PeriodType}"/>
                            <DataGridTextColumn Header="Regular Price" Width="50*" Binding="{Binding Path=RegularPrice}"/>
                            <DataGridTextColumn Header="Residents Price" Width="50*" Binding="{Binding Path=ResidentPrice}"/>
                            <DataGridTextColumn Header="Price if Fixed" Width="50*" Binding="{Binding Path=FixedPrice}"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <ComboBox x:Name="ComboBoxTypeAdministration" HorizontalAlignment="Left" Height="35" Margin="269,16,0,0" VerticalAlignment="Top" Width="220" SelectionChanged="ComboBoxTypeAdministration_SelectionChanged">
                        <ComboBoxItem Content="Room" IsSelected="True"/>
                        <ComboBoxItem Content="Additional Service"/>
                    </ComboBox>
                    <ComboBox x:Name="ComboBoxTypeOfRoom" HorizontalAlignment="Left" Height="35" Margin="16,66,0,0" VerticalAlignment="Top" Width="221">
                        <ComboBoxItem Content="MiniOffice"/>
                        <ComboBoxItem Content="MeetingRoom"/>
                        <ComboBoxItem Content="ConferenceHall"/>
                    </ComboBox>
                    <Label x:Name="LabelNameAdministration" Content="Name" HorizontalAlignment="Left" Height="29" Margin="17,136,0,0" VerticalAlignment="Top" Width="64" FontWeight="Bold" FontSize="14"/>
                    <TextBox x:Name="TextBoxProductName" HorizontalAlignment="Left" Height="35" Margin="95,133,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="269" Text="Enter Name"/>
                    <Label x:Name="LabelCount" Content="Count " HorizontalAlignment="Left" Height="30" Margin="17,187,0,0" VerticalAlignment="Top" Width="61" FontSize="14" FontWeight="Bold"/>
                    <TextBox x:Name="TextBoxProductCount" HorizontalAlignment="Left" Height="35" Margin="95,188,0,0" TextWrapping="Wrap" Text="Enter Count" VerticalAlignment="Top" Width="269"/>
                    <Button x:Name="ButtonSaveProduct" Content="Save " HorizontalAlignment="Left" Height="35" Margin="380,188,0,0" VerticalAlignment="Top" Width="107" FontWeight="Bold" FontSize="14" Background="#FF9FDFF2" Click="ButtonSaveProduct_Click"/>
                    <Grid x:Name="GridWorkPlaceAdministration" HorizontalAlignment="Center" Height="217" VerticalAlignment="Top" Width="446" Visibility="Visible" Background="#FFE6C297" Grid.Column="1" Grid.Row="1" Margin="0,10,0,0">
                        <Label x:Name="LabelAddPriceForWorkPlaceInRoom" Content="Add Price For Workplace In Room" HorizontalAlignment="Left" Height="35" Margin="34,10,0,0" VerticalAlignment="Top" Width="278" FontSize="16" FontWeight="Bold"/>
                        <ComboBox x:Name="ComboBoxTypePeriodForWorkPlace" HorizontalAlignment="Left" Height="37" Margin="34,49,0,0" VerticalAlignment="Top" Width="262">
                            <ComboBoxItem Content="One Day" IsSelected="True"/>
                            <ComboBoxItem Content="One Week"/>
                        </ComboBox>
                        <Label x:Name="LabelRegularPriceWP" Content="Regular" HorizontalAlignment="Left" Height="35" Margin="34,0,0,0" VerticalAlignment="Center" Width="110" FontWeight="Bold" FontSize="14"/>
                        <TextBox x:Name="TextBoxRegularPrice_Copy" HorizontalAlignment="Left" Height="26" Margin="138,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="158" Text="RegularPrice"/>
                        <Label x:Name="LabelFixedPriceWP" Content="Fixed" HorizontalAlignment="Left" Height="36" Margin="34,167,0,0" VerticalAlignment="Top" Width="86" FontWeight="Bold" FontSize="14"/>
                        <TextBox x:Name="TextBoxFixedPriceWP" HorizontalAlignment="Left" Height="26" Margin="138,172,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="158" Text="Fixed Price"/>
                        <Label x:Name="LabelResidentPriceWP" Content="Resident" HorizontalAlignment="Left" Height="35" Margin="34,129,0,0" VerticalAlignment="Top" Width="86" FontSize="14" FontWeight="Bold"/>
                        <TextBox x:Name="TextBoxResidentPriceWP" HorizontalAlignment="Left" Height="26" Margin="138,134,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="158" Text="Resident Price"/>
                        <Button x:Name="ButtonSavePriceAdministrationWP" Content="Save Price" HorizontalAlignment="Left" Height="35" Margin="344,172,0,0" VerticalAlignment="Top" Width="92" FontWeight="Bold" Background="#FF9FDFF2"/>
                    </Grid>
                    <Grid x:Name="GridPrices" HorizontalAlignment="Center" Height="217" Margin="0,10,0,0" VerticalAlignment="Top" Width="446" Visibility="Visible" Background="#FFE6C297" Grid.Row="1">
                        <Label x:Name="LabelAddPrices" Content="Add Price " HorizontalAlignment="Left" Height="35" Margin="34,10,0,0" VerticalAlignment="Top" Width="124" FontSize="16" FontWeight="Bold"/>
                        <ComboBox x:Name="ComboBoxTypePeriod" HorizontalAlignment="Left" Height="37" Margin="34,49,0,0" VerticalAlignment="Top" Width="262">
                            <ComboBoxItem Content="One Hour" IsSelected="True"/>
                            <ComboBoxItem Content="One Day"/>
                            <ComboBoxItem Content="One Week"/>
                        </ComboBox>
                        <Label x:Name="LabelRegularPrice" Content="Regular" HorizontalAlignment="Left" Height="35" Margin="34,0,0,0" VerticalAlignment="Center" Width="86" FontWeight="Bold" FontSize="14"/>
                        <TextBox x:Name="TextBoxRegularPrice" HorizontalAlignment="Left" Height="26" Margin="138,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="158" Text="RegularPrice"/>
                        <Label x:Name="LabelResidentPrice" Content="Resident" HorizontalAlignment="Left" Height="35" Margin="34,129,0,0" VerticalAlignment="Top" Width="106" FontSize="14" FontWeight="Bold"/>
                        <TextBox x:Name="TextBoxResidentPrice" HorizontalAlignment="Left" Height="26" Margin="138,133,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="158" Text="Resident Price"/>
                        <Button x:Name="ButtonSavePriceAdministration" Content="Save Price" HorizontalAlignment="Left" Height="35" Margin="344,172,0,0" VerticalAlignment="Top" Width="92" FontWeight="Bold" Background="#FF9FDFF2"/>
                    </Grid>
                    <ComboBox x:Name="ComboBoxChooseAddOrEdit" HorizontalAlignment="Left" Height="35" Margin="17,16,0,0" VerticalAlignment="Top" Width="220">
                        <ComboBoxItem Content="Add New" IsSelected="True"/>
                        <ComboBoxItem Content="Edit"/>
                    </ComboBox>
                    <Button x:Name="ButtonSavePriceAdminDatagrid" Content="Save" HorizontalAlignment="Left" Height="35" Margin="248,207,0,0" VerticalAlignment="Top" Width="108" FontWeight="Bold" FontSize="14" Background="#FF9FDFF2" Grid.Row="2"/>
                    <Button x:Name="ButtonDeletePriceAdminDatagrid" Content="Delete" HorizontalAlignment="Left" Height="35" Margin="364,207,0,0" VerticalAlignment="Top" Width="108" FontSize="14" FontWeight="Bold" Background="#FFF45050" Grid.Row="2"/>
                    <ComboBox x:Name="ComboBoxNameOfProduct" HorizontalAlignment="Left" Height="35" Margin="269,68,0,0" VerticalAlignment="Top" Width="220" Background="{x:Null}"/>
                    <DataGrid x:Name="DataGridAdministrationTest" HorizontalAlignment="Center" Height="166" VerticalAlignment="Top" Width="446" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.Column="1" Grid.Row="2" Margin="0,34,0,0"/>
                    <Label Content="Prices" HorizontalAlignment="Left" Margin="26,5,0,0" Grid.Row="2" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
                    <Label Grid.Column="1" Content="For Tests" HorizontalAlignment="Left" Margin="26,252,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="14" Grid.RowSpan="2"/>


                </Grid>
            </TabItem>
            <TabItem Header="Finance">
                <Grid Background="LightBlue">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="105*"></RowDefinition>
                        <RowDefinition Height="55*"></RowDefinition>
                        <RowDefinition Height="596*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="1" Grid.Row="0" Content="Reports Period" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Height="29" Width="125" FontSize="14" FontWeight="Bold"/>
                    <Label Content="Type of Report" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Height="36" Width="112" FontSize="14" FontWeight="Bold"/>
                    <ComboBox x:Name="ComboBox_TypeOfReport" HorizontalAlignment="Left" Margin="10,51,0,0" VerticalAlignment="Top" Width="250" Height="24">
                        <TextBlock>Products</TextBlock>
                        <TextBlock>Customers</TextBlock>
                    </ComboBox>
                    <Button x:Name="Button_GetReport" Grid.Column="2" Content="Get Report" HorizontalAlignment="Left" Margin="46,34,0,0" VerticalAlignment="Top" Height="52" Width="250" BorderBrush="{x:Null}" Background="#FF2794B8" Foreground="White" FontSize="16" FontWeight="Bold" Click="Button_GetReport_Click"/>
                    <DataGrid Name="DataGrid_Report" Grid.ColumnSpan="3" Margin="10,10,10,10" ColumnHeaderHeight="30" RowBackground="AliceBlue" RowHeight="30" AutoGenerateColumns="False" Visibility="Visible" Grid.Row="2">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name of Product" Width="50*" Binding="{Binding Path=ProductName}"/>
                            <DataGridTextColumn Header="Count" Width="50*" Binding="{Binding Path=Count}"/>
                            <DataGridTextColumn Header="Summ" Width="50*" Binding="{Binding Path=Summ}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <DataGrid Name="DataGrid_ReportByCustomer" Grid.ColumnSpan="3" Margin="10,10,10,10" ColumnHeaderHeight="30" RowBackground="AliceBlue" RowHeight="30" AutoGenerateColumns="False" Visibility="Hidden" Grid.Row="2">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Width="50*" Binding="{Binding Path=Name}"/>
                            <DataGridTextColumn Header="Count of orders" Width="50*" Binding="{Binding Path=OrderCount}"/>
                            <DataGridTextColumn Header="Summ of orders" Width="50*" Binding="{Binding Path=OrderSum}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <DatePicker x:Name="DataPicker_Finance_StartDate" Grid.Column="1" HorizontalAlignment="Left" Margin="10,51,0,0" VerticalAlignment="Top" Width="125" FirstDayOfWeek="Monday" Text="Start Date" Height="24"/>
                    <DatePicker x:Name="DataPicker_Finance_EndDate" Grid.Column="1" HorizontalAlignment="Left" Margin="166,51,0,0" VerticalAlignment="Top" Width="125" FirstDayOfWeek="Monday" Text="End Date" Height="24"/>
                    <Label Grid.Column="1" Content="Total:" HorizontalAlignment="Left" Margin="270,0,0,0" Grid.Row="1" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Height="31" Width="52"/>
                    <TextBox x:Name="TextBox_Total" Grid.Column="2" HorizontalAlignment="Left" Margin="46,0,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Center" Width="250" Height="38" BorderBrush="White" FontSize="16" FontWeight="Bold" TextAlignment="Center"/>
                    <Popup x:Name="popup1" StaysOpen="False" Placement="Mouse" MaxWidth="180" AllowsTransparency="True"  >
                        <TextBlock TextWrapping="Wrap" Width="180" Background="White" Opacity="0.9" >
                            First choose type of report and set dates
                        </TextBlock>
                    </Popup>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
