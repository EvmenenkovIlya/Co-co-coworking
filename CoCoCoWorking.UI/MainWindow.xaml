<Window x:Class="CoCoCoWorking.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoCoCoWorking.UI"
        mc:Ignorable="d"
        Title="CoCoCoWorking" Height="800" Width="1000" ResizeMode="NoResize">
    <Grid>
        <TabControl>
            <TabItem Header="Customers">
                <Grid Background="Bisque">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="101*"/>
                        <ColumnDefinition Width="397*"/>
                        <ColumnDefinition Width="497*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50*"/>
                        <RowDefinition Height="50*"/>
                    </Grid.RowDefinitions>
                    <Label Content="Form to create new Customer" HorizontalAlignment="Left" VerticalAlignment= "Top"  Margin="28,20,0,0" FontWeight="Bold" FontFamily="Arial Black" FontSize="14" Grid.Column="1" />
                    <Label Content="First name" HorizontalAlignment="Left" VerticalAlignment= "Top"  Margin="30, 70, 0, 0" FontWeight="Bold" FontFamily="Arial Black" FontSize="14" Grid.ColumnSpan="2"/>
                    <Label Content="Last name" HorizontalAlignment="Left" VerticalAlignment= "Top"  Margin="30, 130, 0, 0" FontWeight="Bold" FontFamily="Arial Black" FontSize="14" Grid.ColumnSpan="2"/>
                    <Label Content="Number" HorizontalAlignment="Left" VerticalAlignment= "Top"  Margin="30, 190, 0, 0" FontWeight="Bold" FontFamily="Arial Black" FontSize="14"/>
                    <Label Content="Email" HorizontalAlignment="Left" VerticalAlignment= "Top"  Margin="30, 250, 0, 0" FontWeight="Bold" FontFamily="Arial Black" FontSize="14"/>
                    <TextBox Name="TextBoxFirstName" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment= "Top" Margin="54,70,0,0" Grid.Column="1"/>
                    <TextBox Name="TextBoxLastName" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment= "Top" Margin="54,130,0,0" Grid.Column="1"/>
                    <TextBox Name="TextBoxNumber" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment= "Top" Margin="54,190,0,0" Grid.Column="1"/>
                    <TextBox Name="TextBoxEmail" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment= "Top" Margin="54,250,0,0" Grid.Column="1"/>
                    <Button Name="ButtomCreateNewCustomer" Content="Create New Customer" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="200" Height="30" Margin="38,0,0,30" FontWeight="Bold" FontFamily="Arial Black" FontSize="14" Click="ButtonCreateNewCustomer_Click" Grid.Column="1" />
                    <Label Content="Number for search:" Grid.Column="2"  Width="160" HorizontalAlignment="Left" VerticalAlignment= "Top" FontWeight="Bold" FontFamily="Arial Black" FontSize="14" Margin="10, 20, 0, 0" Height="30" />
                    <TextBox Name="TextBoxNumberForSearch" Grid.Column="2" Width="160" Height="30" HorizontalAlignment="Left" VerticalAlignment= "Top" Margin="10, 50, 0, 0"/>
                    <Button Name="ButtonSearchByNumber" Content="Search by Number"  Grid.Column="2" Width="250" Height="30" HorizontalAlignment="Right" VerticalAlignment= "Top" FontWeight="Bold" Margin="0,50,30,0" FontFamily="Arial Black" FontSize="14" Click="ButtonSearchByNumber_Click"/>
                    <Label Content="List of Customers:" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment= "Top" FontWeight="Bold" FontFamily="Arial Black" FontSize="14" Margin="0,100,0,0" Height="30" />
                    <DataGrid Name="DataGridCustomers" Grid.Column="2" Margin="10,130,10,80" Grid.RowSpan="2" ColumnHeaderHeight="30" RowBackground="AliceBlue" RowHeight="30" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Width="40*" Binding="{Binding Path=Name}"/>
                            <DataGridTextColumn Header="Phone"  Width="40*" Binding="{Binding Path=PhoneNumber}"/>
                            <DataGridTextColumn Header="Email" Width="50*" Binding="{Binding Path=Email}"/>
                            <DataGridTextColumn Header="Regular" Width="50*" Binding="{Binding Path=Regular}"/>
                            <DataGridTextColumn Header="Subscribe" Width="50*" Binding="{Binding Path=Subscribe}"/>
                            <DataGridTextColumn Header="EndDate"  Width="40*" Binding="{Binding Path=EndDate}"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Button Name="ButtonCreateNewOrder" Grid.Column="2" Grid.Row="1" Content="Create New Order" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="200" Height="30" Margin="139,0,0,30" FontWeight="Bold" FontFamily="Arial Black" FontSize="14" Click="ButtonCreateNewOrder_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="Orders" Height="20" VerticalAlignment="Top">
                <Grid Background="Bisque">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <ComboBox x:Name="PurchaseType_Combobox" HorizontalAlignment="Left" Height="33" Margin="463,38,0,0" VerticalAlignment="Top" Width="477" SelectionChanged="PurchaseType_Combobox_SelectionChanged" >
                        <ComboBox Height="30" Width="48"/>
                        <ComboBoxItem Background="#FFC10E0E" BorderBrush="#FF691D1D" Content="adadad"/>
                    </ComboBox>
                    <DataGrid x:Name="Order_DataGrid" HorizontalAlignment="Left" Height="446" Margin="45,226,0,0" VerticalAlignment="Top" Width="890">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="OrderStatus" Binding="{Binding Path=OrderStatus}"/>
                            <DataGridTextColumn Header="PaidDate" Binding="{Binding Path=PaidDate}"/>
                            <DataGridTextColumn Header="OrderCost" Binding="{Binding Path=OrderCost}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button x:Name="CreateOrder_Button" Content="Create order" HorizontalAlignment="Left" Height="48" Margin="790,677,0,0" VerticalAlignment="Top" Width="145" />
                    <ComboBox x:Name="ChooseWorkplace_Combobox" HorizontalAlignment="Left" Height="35" Margin="463,98,0,0" VerticalAlignment="Top" Width="477" IsEnabled="False" SelectionChanged="ChooseWorkplace_Combobox_SelectionChanged"  />
                    <ComboBox x:Name="Type_ComboBox" HorizontalAlignment="Left" Height="33" Margin="45,32,0,0" VerticalAlignment="Top" Width="173" SelectionChanged="Type_ComboBox_SelectionChanged_1" >
                        <ComboBoxItem Content="Room"/>
                        <ComboBoxItem Content="Сonference hall"/>
                        <ComboBoxItem Content="Meeting room"/>
                        <ComboBoxItem Content="Worckplace"/>
                        <ComboBoxItem Content="Worckplace fixed"/>
                        <ComboBoxItem Content="Service"/>
                    </ComboBox>
                    <Button x:Name="ButtonAddToOrder" Content="Add to order" HorizontalAlignment="Left" Height="38" Margin="463,164,0,0" VerticalAlignment="Top" Width="114" />
                    <Calendar x:Name="Order_Calendar" HorizontalAlignment="Left" Height="164" Margin="216,32,0,0" VerticalAlignment="Top" Width="242" SelectionMode="MultipleRange" />
                    <DatePicker x:Name="DatePicker_Order_StartDate" HorizontalAlignment="Left" Height="27" Margin="45,87,0,0" VerticalAlignment="Top" Width="173"/>
                    <DatePicker x:Name="DatePicker_Order_EndDate" HorizontalAlignment="Left" Height="26" Margin="45,133,0,0" VerticalAlignment="Top" Width="173"/>
                    <Button x:Name="ButtonSearchByDate" Content="Search by date" HorizontalAlignment="Left" Height="38" Margin="45,164,0,0" VerticalAlignment="Top" Width="142" Click="ButtonSearchByDate_Click"/>
                    <Button x:Name="ButtonReset" Content="Reset" HorizontalAlignment="Left" Height="38" Margin="834,164,0,0" VerticalAlignment="Top" Width="101"/>


                </Grid>
            </TabItem>
            <TabItem x:Name="TabItemAdministration" Header="Administration">
                <Grid Background="Bisque">
                    <DataGrid x:Name="DataGridSheduleRooms" HorizontalAlignment="Left" Height="378" Margin="26,153,0,0" VerticalAlignment="Top" Width="401" d:ItemsSource="{d:SampleData ItemCount=5}" AutoGenerateColumns="False">
                        <DataGrid.CellStyle>
                            <Style/>
                        </DataGrid.CellStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Service name"/>
                            <DataGridTextColumn Header="Room number"/>
                            <DataGridCheckBoxColumn Header="Name"/>
                            <DataGridCheckBoxColumn Header="Price"/>
                            <DataGridCheckBoxColumn Header="Start date"/>
                            <DataGridCheckBoxColumn Header="End date"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <ComboBox x:Name="ComboBoxTypeAdministration" HorizontalAlignment="Left" Height="35" Margin="26,33,0,0" VerticalAlignment="Top" Width="401">
                        <ComboBoxItem Content="Room"/>
                        <ComboBoxItem Content="Additional Service"/>
                        <ComboBoxItem Content="Work Place"/>
                        <ComboBoxItem Content="Meeting Room"/>
                        <ComboBoxItem Content="Conference Hall"/>
                        <ComboBoxItem Content="Work Place Fixed"/>
                    </ComboBox>
                    <ComboBox HorizontalAlignment="Left" Height="35" Margin="26,87,0,0" VerticalAlignment="Top" Width="401">
                        <ComboBoxItem Content="Classic Room"/>
                        <ComboBoxItem Content="Second Classic Room"/>
                        <ComboBoxItem Content="Business Room"/>
                        <ComboBoxItem Content="VIP Room"/>
                    </ComboBox>

                </Grid>
            </TabItem>
            <TabItem Header="Finance">
                <Grid Background="LightBlue">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="21*"></RowDefinition>
                        <RowDefinition Height="70*"></RowDefinition>
                        <RowDefinition Height="17*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="1" Grid.Row="0" Content="Reports Period" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Height="29" Width="125" FontSize="14" FontWeight="Bold"/>
                    <Label Content="Type of Report" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Height="36" Width="112" FontSize="14" FontWeight="Bold"/>
                    <ComboBox x:Name="ComboBox_TypeOfReport" HorizontalAlignment="Left" Margin="10,51,0,0" VerticalAlignment="Top" Width="250" Height="24">
                        <TextBlock>Products</TextBlock>
                        <TextBlock>Customers</TextBlock>
                    </ComboBox>
                    <Button x:Name="Button_GetReport" Grid.Column="2" Content="Get Report" HorizontalAlignment="Left" Margin="46,34,0,0" VerticalAlignment="Top" Height="52" Width="250" BorderBrush="{x:Null}" Background="#FF2794B8" Foreground="White" FontSize="16" FontWeight="Bold" Click="Button_GetReport_Click"/>
                    <DataGrid Name="DataGrid_Report" Grid.ColumnSpan="4" Margin="10,147,10,21" Grid.RowSpan="2" ColumnHeaderHeight="30" RowBackground="AliceBlue" RowHeight="30" AutoGenerateColumns="False" Visibility="Hidden">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ProductName" Width="50*" Binding="{Binding Path=ProductName}"/>
                            <DataGridTextColumn Header="Count" Width="50*" Binding="{Binding Path=Count}"/>
                            <DataGridTextColumn Header="Summ" Width="50*" Binding="{Binding Path=Summ}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <DataGrid Name="DataGrid_ReportByCustomer" Grid.ColumnSpan="4" Margin="10,147,10,21" Grid.RowSpan="2" ColumnHeaderHeight="30" RowBackground="AliceBlue" RowHeight="30" AutoGenerateColumns="False" Visibility="Hidden">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Width="50*" Binding="{Binding Path=Name}"/>
                            <DataGridTextColumn Header="Count of orders" Width="50*" Binding="{Binding Path=OrderCount}"/>
                            <DataGridTextColumn Header="Summ of orders" Width="50*" Binding="{Binding Path=OrderSum}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Label Grid.Column="2" Content="Total:" HorizontalAlignment="Left" Margin="46,490,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="16" Background="White" FontWeight="Bold" Grid.RowSpan="2" Height="46" Width="82"/>
                    <TextBox x:Name="TextBox_Total" Grid.Column="3" HorizontalAlignment="Left" Margin="0,490,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="321" Grid.RowSpan="2" Height="46" BorderBrush="White"/>
                    <DatePicker x:Name="DataPicker_Finance_StartDate" Grid.Column="1" HorizontalAlignment="Left" Margin="10,51,0,0" VerticalAlignment="Top" Width="125" FirstDayOfWeek="Monday" Text="Start Date"/>
                    <DatePicker x:Name="DataPicker_Finance_EndDate" Grid.Column="1" HorizontalAlignment="Left" Margin="166,51,0,0" VerticalAlignment="Top" Width="125" FirstDayOfWeek="Monday" Text="End Date"/>
                    <Label Grid.Column="1" Content="Total:" HorizontalAlignment="Left" Margin="270,10,0,0" Grid.Row="2" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>

                </Grid>
            </TabItem>
            <TabItem Header="Old Design">
                <Grid Background="LightGreen">
                    <ComboBox HorizontalAlignment="Left" Margin="102,124,0,0" VerticalAlignment="Top" Width="272" Height="25"/>
                    <ComboBox HorizontalAlignment="Left" Height="25" Margin="136,163,0,0" VerticalAlignment="Top" Width="238"/>
                    <TextBox HorizontalAlignment="Left" Height="30" Margin="102,200,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="273"/>
                    <TextBox HorizontalAlignment="Left" Height="285" Margin="400,27,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="373"/>
                    <TextBox HorizontalAlignment="Left" Height="30" Margin="102,244,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="273"/>
                    <ComboBox HorizontalAlignment="Left" Height="25" Margin="102,287,0,0" VerticalAlignment="Top" Width="273"/>
                    <TextBox HorizontalAlignment="Left" Height="30" Margin="280,330,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="95"/>
                    <TextBox HorizontalAlignment="Left" Height="30" Margin="280,372,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="95"/>
                    <TextBox HorizontalAlignment="Left" Height="30" Margin="102,330,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="95"/>
                    <TextBox HorizontalAlignment="Left" Height="30" Margin="102,372,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="95"/>
                    <Label Content="Тип" HorizontalAlignment="Left" Height="36" Margin="61,118,0,0" VerticalAlignment="Top" Width="36" FontSize="16"/>
                    <Label Content="Доп. оборудование" HorizontalAlignment="Left" Height="30" Margin="10,160,0,0" VerticalAlignment="Top" Width="121"/>
                    <Button Content="Отчет" HorizontalAlignment="Left" Margin="400,330,0,0" VerticalAlignment="Top" Height="30" Width="107"/>
                    <Button Content="Добавить" HorizontalAlignment="Left" Margin="400,372,0,0" VerticalAlignment="Top" Height="30" Width="107"/>
                    <Label Content="Дата" HorizontalAlignment="Left" Height="30" Margin="238,330,0,0" VerticalAlignment="Top" Width="37"/>
                    <Label Content="Дата" HorizontalAlignment="Left" Height="30" Margin="60,332,0,0" VerticalAlignment="Top" Width="37"/>
                    <Label Content="Время" HorizontalAlignment="Left" Height="30" Margin="232,372,0,0" VerticalAlignment="Top" Width="48"/>
                    <Label Content="Время" HorizontalAlignment="Left" Height="30" Margin="52,372,0,0" VerticalAlignment="Top" Width="45"/>
                    <Label Content="ПО" HorizontalAlignment="Left" Height="30" Margin="209,350,0,0" VerticalAlignment="Top" Width="37" FontSize="16"/>
                    <Label Content="С" HorizontalAlignment="Left" Height="30" Margin="34,350,0,0" VerticalAlignment="Top" Width="36" FontSize="16"/>
                    <Label Content="ФИО" HorizontalAlignment="Left" Height="31" Margin="46,0,0,0" VerticalAlignment="Center" Width="48" FontSize="16"/>
                    <Label Content="Номер" HorizontalAlignment="Left" Height="31" Margin="34,244,0,0" VerticalAlignment="Top" Width="60" FontSize="16"/>
                    <Label Content="Офис" HorizontalAlignment="Left" Height="31" Margin="42,284,0,0" VerticalAlignment="Top" Width="52" FontSize="16"/>
                    <Button Content="Забронировать" HorizontalAlignment="Left" Margin="666,372,0,0" VerticalAlignment="Top" Height="30" Width="107"/>
                    <Label Content="CoCoCoWorking" HorizontalAlignment="Left" Height="70" Margin="67,27,0,0" VerticalAlignment="Top" Width="307" FontSize="40"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
